{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",

      ],
      "@utils": [
        "./src/lib/utils.ts"
      ],
      "@components": [
        "./src/components/*"
      ],
      "@hooks": [
        "./src/hooks/*"
      ],
      "@assets": [
        "./src/assets/*"
      ],
      "@styles": [
        "./src/styles/*"
      ],
      "@types": [
        "./src/types/*"
      ],
      "@services":[
        "./src/services/*"
      ],
      "@constants":[
        "./src/constants/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
